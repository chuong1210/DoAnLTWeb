@model WebStore.Models.NguoiDungDTO

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>SignUp</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger field-validation-error" data-valmsg-replace="true">@ViewBag.ErrorMessage</span>

            <div class="form-group">
                <label asp-for="UserName" class="control-label">Tài Khoản*</label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật Khẩu*</label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-2">
                        <input type="checkbox" id="showPass" />
                    </div>
                </div>
            </div><div class="form-group">
                <label asp-for="Password" class="control-label">Nhập lại mật Khẩu*</label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-sm-2">
                        <input type="checkbox" id="showPass" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Họ tên*</label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Age" class="control-label">Tuổi*</label>
                        <input asp-for="Age" class="form-control" />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Gender" class="control-label"></label>
                    </div>
                    <div class="col-sm-3">
                        <input type="radio" id="male" asp-for="Gender" value="1" checked>
                        <label for="male"> Male</label>
                    </div>
                    <div class="col-sm-6">
                        <input type="radio" id="female" asp-for="Gender" value="0">
                        <label for="female"> Female</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email*</label>
                <div class="row">
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Back to Login</a>
</div>

