@model WebStore.Models.NguoiDungDTO

@{
    ViewData["Title"] = "EditAccount";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>EditAccount</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAccount">
            <input hidden asp-for="idND" class="form-control" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger field-validation-error" data-valmsg-replace="true">@ViewBag.ErrorMessage</span>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" disabled  />
                 <input hidden asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-5">
                        <label asp-for="NgaySinh" class="control-label">Ngày Sinh:</label>
                        <input asp-for="NgaySinh" type="date" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="col-sm-7">
                        <div class="row">
                            <div class="col-sm-12">
                                <label asp-for="Gender" class="control-label"></label>
                            </div>

                            @if (Model.Gender == 1)
                            {
                                <div class="col-sm-4">
                                    <input type="radio" id="male" asp-for="Gender" value="1" checked>
                                    <label for="male"> Male</label>
                                </div>
                                <div class="col-sm-6">
                                    <input type="radio" id="female" asp-for="Gender" value="0">
                                    <label for="female"> Female</label>
                                </div>
                            }
                            else if (Model.Gender == 0)
                            {
                                <div class="col-sm-4">
                                    <input type="radio" id="male" asp-for="Gender" value="1">
                                    <label for="male"> Male</label>
                                </div>
                                <div class="col-sm-6">
                                    <input type="radio" id="female" asp-for="Gender" value="0" checked>
                                    <label for="female"> Female</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>

            </div>
               @if (Model.UserRole == "customer")
                    {
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
                    }
                    else
                    {
            <div class="form-group">
                    <label asp-for="ChucVu" class="control-label"></label>
                    <input asp-for="ChucVu" class="form-control" />
                    <span asp-validation-for="ChucVu" class="text-danger"></span>
            </div>
                    }
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <input asp-for="UserRole" hidden class="form-control" />

            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control">
                    @if (Model.UserRole == "customer")
                    {
                        <option value="R3" selected>Khách hàng</option>
                        <option value="R1">Quản trị viên</option>
                        <option value="R2">Nhân viên</option>
                    }
                    else if (Model.UserRole == "admin")
                    {
                        <option value="R3">Khách hàng</option>
                        <option value="R1" selected>Quản trị viên</option>
                        <option value="R2">Nhân viên</option>
                    }
                    else if (Model.UserRole == "staff")
                    {
                        <option value="R3">Khách hàng</option>
                        <option value="R1">Quản trị viên</option>
                        <option value="R2" selected>Nhân viên</option>
                    }
                </select>

            
                <span asp-validation-for="RoleId" class="text-danger"></span>

            </div>
         

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManagerAccount">Back to List</a>
</div>

