@model WebStore.Models.OrderDetailViewModel

@{
    ViewData["Title"] = "DetailOrder";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>Order Information</h4>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-md-2">Image</th>
                            <th class="col-md-6">Book Title</th>
                            <th class="col-md-4">Quantity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItem)
                        {
                           
                                    <tr>
                                        <td>
                                            <span class="image">
                                                <img src="/images/@item.BookImage" height="120" width="110" alt="" />
                                            </span>
                                        </td>
                                        <td>
                                            @item.BookTitle
                                        </td>
                                        <td>
                                            @item.Quantity
                                        </td>
                                    </tr>
                                
                            
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="row">
                <label class="col-sm-3">Order ID</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.Id
                </div>
                <label class="col-sm-3">Name</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.TenNguoiDatHang
                </div>
                <label class="col-sm-3">Email</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.Email
                </div>
                <label class="col-sm-3">Phone</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.SoDienThoai
                </div>
                <label class="col-sm-3">Address</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.DiaChi
                </div>
                <label class="col-sm-3">Total Price</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.TongTien.ToString("C")
                </div>
                <label class="col-sm-3">Status</label>
                <div class="col-sm-9">
                    @Model.InfoOrder.TrangThaiTT
                </div>
            </div>
        </div>
    </div>

    <a class="button" href="@Url.Action("EditOrder", new { id = Model.InfoOrder.DonHangId })">Edit</a>
    <a class="button" href="@Url.Action("ManagerOrder")">Back to List</a>
</div>
